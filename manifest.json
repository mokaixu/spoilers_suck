{
	"name": "Spoilers Suck",
	"description": "Don't let your dank friends spoil your favourite shows",
	"version": "1.0",
	"manifest_version": 2,



	"permissions": [
		"activeTab", "tabs"
	],
    "background": {
        "scripts": ["background/background.js"],
        "persistent": true
    },

	"browser_action": {
		"default_title": "Spoilers Suck",
		"default_popup": "public/popup.html",
        "default_icon": "public/img/calendar.png"
	},
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "public/scripts/content.js"
            ]        }
    ]
}